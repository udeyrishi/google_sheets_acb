{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build/tmp",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.js", "**/*.test.ts"]
}
